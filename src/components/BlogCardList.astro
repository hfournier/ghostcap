---
import type { CollectionEntry } from "astro:content";
import BlogCard from "./BlogCard.astro";

type Props = {
  posts: CollectionEntry<"posts">[];
};

const { posts } = Astro.props;
---

<ul class="grid gap-6 py-8 md:grid-cols-2 lg:gap-8">
  {
    posts.map((post) => (
      <li>
        <a href={`/${post.slug}`}>
          <BlogCard {post} />
        </a>
      </li>
    ))
  }
</ul>
