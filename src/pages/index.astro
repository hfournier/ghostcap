---
import Latest from "@components/Latest.astro";
import Hero from "@components/Hero.astro";
import StartNow from "@components/StartNow.astro";
import PopularCat from "@components/PopularCat.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import FeaturedCategory from "@components/FeaturedCategory.astro";

const title = "GhostCap";
const description =
  "Discover the latest tech, reviews, and tips for optimizing your gaming rig and peripherals.";
---

<BaseLayout {title} {description}>
  <Hero />
  <main class="space-y-6">
    <Latest />
    <StartNow />
    <FeaturedCategory category="gaming" title="Gaming" count={4} />
    <PopularCat
      categories={[
        { name: "Counter Strike", link: "/gaming/counter-strike" },
        { name: "Minecraft", link: "/gaming/minecraft" },
        { name: "Rust", link: "/gaming/rust" },
        { name: "Valorant", link: "/gaming/valorant" },
      ]}
    />
    <FeaturedCategory
      category="server-hosting"
      title="Server Hosting"
      count={5}
      showFeatured={true}
    />
    <PopularCat
      categories={[
        { name: "Hosting Guides", link: "/server-hosting/hosting-guides" },
        { name: "Hosting Reviews", link: "/server-hosting/hosting-reviews" },
      ]}
    />
    <FeaturedCategory
      category="hardware"
      title="Hardware"
      count={5}
      showFeatured={true}
    />
  </main>
</BaseLayout>
