---
import Latest from "@components/Latest.astro";
import Hero from "@components/Hero.astro";
import StartNow from "@components/StartNow.astro";
import PopCat from "@components/PopCat.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import FeaturedCategory from "@components/FeaturedCategory.astro";

const title = "GhostCap";
const description =
  "Discover the latest tech, reviews, and tips for optimizing your gaming rig and peripherals.";
---

<BaseLayout {title} {description}>
  <Hero />
  <Latest />
  <StartNow />
  <FeaturedCategory category="gaming" title="Gaming" count={4} />
  <PopCat categories={["Counter Strike", "Minecraft", "Rust", "Valorant"]} />
  <FeaturedCategory
    category="server-hosting"
    title="Server Hosting"
    count={5}
    showFeatured={true}
  />
  <PopCat categories={["Hosting Guides", "Hosting Reviews"]} />
  <FeaturedCategory
    category="hardware"
    title="Hardware"
    count={5}
    showFeatured={true}
  />
</BaseLayout>
